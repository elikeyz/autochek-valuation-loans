{
  "compilerOptions": {
    "module": "node16",
    "target": "ES2020",
    "lib": ["ES2020"],
    "moduleResolution": "node16",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "strict": false,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts", "test/**/*.ts", "src/**/*.spec.ts"]
}
